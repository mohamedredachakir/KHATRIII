@startuml
skinparam classAttributeIconSize 0

' ======================
' USER
' ======================
class User {
    +id : int
    +first_name : string
    +last_name : string
    +email : string
    +password : string
    +role : enum (admin, author, reader)
}

' ======================
' ARTICLE
' ======================
class Article {
    +id : int
    +title : string
    +content : text
    +create_at : datetime
    +id_user : int
}

' ======================
' COMMENT
' ======================
class Commentaire {
    +id : int
    +content : text
    +create_at : datetime
    +id_article : int
    +id_reader : int
}

' ======================
' LIKE ARTICLE
' ======================
class LikeArticle {
    +id : int
    +id_article : int
    +id_reader : int
}

' ======================
' LIKE COMMENT
' ======================
class LikeCommentaire {
    +id : int
    +id_commentaire : int
    +id_reader : int
}

' ======================
' CATEGORY
' ======================
class Categorie {
    +id : int
    +name : string
}

' ======================
' RELATIONS
' ======================

User "1" -- "0..*" Article : writes
User "1" -- "0..*" Commentaire : writes
User "1" -- "0..*" LikeArticle : likes
User "1" -- "0..*" LikeCommentaire : likes

Article "1" -- "0..*" Commentaire : has
Article "1" -- "0..*" LikeArticle : receives
Article "0..*" -- "0..*" Categorie : categorized

Commentaire "1" -- "0..*" LikeCommentaire : receives

@enduml
